<% include ./partials/header.ejs %>
<h1>My Blog App</h1></h1>

  <% blogs.forEach(function(blog) { %>
    <h4><%= blog.title %> - <%= blog.created %></h4>
    <img src="<%= blog.image %>">
    <p><%= blog.body.substring(0, 100) %>...</p>
    <a href="/blogs/<%= blog._id %>">Read more</a>
  <% }); %>

  <% include ./partials/footer.ejs %>